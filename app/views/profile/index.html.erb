<%= link_to events_path, class: 'back-link' do %>
  <i class="far fa-arrow-alt-circle-left"></i> Назад
<% end %>

<div class="title-container with-bottom-border">
  <h1 class="title">Профиль</h1>
</div>

<%= form_with(model: @profile, url: profile_path, html: {class: 'form'}) do |form| %>
  <div class="form-control">
    <%= form.label :name, 'Имя:', class: 'form-label'%>
    <%= form.text_field :name, autofocus: true, class: 'form-input' %>
  </div>

  <div class="form-control">
    <%= form.label :surname, 'Имя:', class: 'form-label'%>
    <%= form.text_field :surname, autofocus: true, class: 'form-input' %>
  </div>

  <div class="form-buttons">
    <%= form.submit 'Сохранить', class: 'form-button form-apply' %>
  </div>
<% end %>