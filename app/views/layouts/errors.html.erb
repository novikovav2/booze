<!DOCTYPE html>
<html>
<head>
  <title>Разделялка</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'errors', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= favicon_link_tag 'users-gear-solid.svg', type: 'image/svg+xml', sizes: 'any' %>
  <%= render 'layouts/apple-touch-icons' %>
</head>

<body class="body">
  <div class="container">
    <%= link_to root_path, class: "title" do %>
      <i class="fa-solid fa-users-gear"></i> Разделялка
    <% end %>
    <%= yield %>
  </div>
</body>
</html>