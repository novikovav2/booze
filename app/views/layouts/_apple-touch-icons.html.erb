<% %w(57 72 76 114 120 144 152 167 180).each do |size| %>
  <%= favicon_link_tag "icons/apple-touch-icon-#{size}x#{size}.png",
                       rel: 'apple-touch-icon',
                       type: 'image/png',
                       sizes: "#{size}x#{size}" %>
  <%= favicon_link_tag "icons/apple-touch-icon-#{size}x#{size}-precomposed.png",
                       rel: 'apple-touch-icon-precomposed',
                       type: 'image/png',
                       sizes: "#{size}x#{size}" %>
<% end %>

