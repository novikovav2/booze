<div class="auth-left">
  <h1 class="auth-header">Восстановление пароля</h1>
  <p class="auth-text">Помните пароль?</p>
  <%= link_to "Вход", new_session_path(resource_name), class: 'auth-link' %>
</div>
<div class="auth-right">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :post, class: 'form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-control">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true,
                        autocomplete: "email",
                        class: 'form-input',
                        required: true
      %>
    </div>

    <div class="actions">
      <%= f.submit "Восстановить пароль", class: 'form-button' %>
    </div>

    <%= link_to "Регистрация", new_registration_path(resource_name), class: 'form-link' %>
  <% end %>

  <%= render "devise/shared/notices" %>
</div>
